{
  "name": "wavetable-synth",
  "description": "Online wavetable synthesizer.",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run build:wasm && vite",
    "build": "bun run build:wasm && vite build",
    "build:wasm": "bun run wasm:compile && bun run wasm:move",
    "wasm:compile": "cargo build --release --target=wasm32-unknown-unknown",
    "wasm:move": "find target -name '*.wasm' -not -path '*deps*' | xargs -I{} wasm-bindgen {} --remove-name-section --out-dir pkg --target bundler",
    "wasm:node": "find target -name '*.wasm' -not -path '*deps*' | xargs -I{} wasm-bindgen {} --remove-name-section --out-dir pkg --target nodejs",
    "preview": "vite preview",
    "format": "bun x biome format . --write && prettier . --write . && cargo fmt",
    "lint": "bun x biome lint . --apply-unsafe && eslint . --fix",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "bun run wasm:node && bun test --coverage && cargo test"
  },
  "repository": "git@github.com:eye-wave/online-synth.git",
  "dependencies": {
    "svelte": "^4.2.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "postcss-variable-compress": "^3.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte-check": "^3.6.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-html-inject": "^1.1.0",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0"
  },
  "keywords": [
    "music",
    "serum",
    "sound-processing",
    "sound",
    "sounddesign",
    "synthesizer",
    "vital",
    "wavetable-synthesizer",
    "wavetable"
  ],
  "license": "GPL-3.0"
}
